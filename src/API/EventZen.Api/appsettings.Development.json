{
  "ConnectionStrings": {
    "Database": "Host=eventzen.database;Port=5432;Database=eventzen;Username=postgres;Password=postgres;Include Error Detail=true",
    "Redis": "eventzen.redis:6379"
  },
  "Authentication": {
    "Audience": "account",
    "TokenValidationParameters": {
      // internal and external issuers inside or outside of docker container
      "ValidIssuers": [ "http://eventzen.identity:8080/realms/eventzen", "http://localhost:18080/realms/eventzen" ]
    },
    "MetadataAddress": "http://eventzen.identity:8080/realms/eventzen/.well-known/openid-configuration",
    "RequireHttpsMetadata": false
  },
  "KeyCloak": {
    "HealthUrl": "http://eventzen.identity:8080/health/"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://eventzen.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "EventZen.Api"
    }
  }
}
